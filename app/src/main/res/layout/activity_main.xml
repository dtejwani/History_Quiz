<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="INDIAN HISTORY QUIZ"
        android:textSize="28sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="ques"
        android:id="@+id/quesTextView"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/A_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="A)"
                android:textColor="#f57f17"
                android:textAppearance="?android:textAppearanceMedium" />
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/A_veiw"
                android:textSize="16dp"
                android:textColor="#f57f17"
                android:text="1947"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/B_radio"
                android:onClick="checkButton"
                android:textColor="#f57f17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B)"
                android:textAppearance="?android:textAppearanceMedium" />
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B_veiw"
                android:textColor="#f57f17"
                android:textSize="16dp"
                android:text="1950"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/C_radio"
                android:layout_width="wrap_content"
                android:onClick="checkButton"
                android:textColor="#f57f17"
                android:layout_height="wrap_content"
                android:text="C)"
                android:textAppearance="?android:textAppearanceMedium" />
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/C_veiw"
                android:textColor="#f57f17"
                android:textSize="16dp"
                android:text="1951"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/D_radio"
                android:layout_width="wrap_content"
                android:onClick="checkButton"
                android:layout_height="wrap_content"
                android:textColor="#f57f17"
                android:text="D)"
                android:textAppearance="?android:textAppearanceMedium" />
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/D_veiw"
                android:textColor="#f57f17"
                android:textSize="16dp"
                android:text="1953"/>
        </LinearLayout>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submit_Button"
        android:onClick="Submit_Clicked"
        android:text="Submit" />

</LinearLayout>